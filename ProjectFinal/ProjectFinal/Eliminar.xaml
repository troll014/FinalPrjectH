<Page x:Class="Eliminar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectFinal"
        mc:Ignorable="d"
         Title="Eliminar" Height="400" Width="500" Background="#DEB887">
    <Grid>
        <StackPanel>
            <TextBlock Text="Eliminar" FontSize="30" Foreground="#A0522D" HorizontalAlignment="Left" Margin="60,10,0,10"/>

            <Label Content="Id:" Foreground="#A0522D" Margin="10,10,10,0"/>
            <Border BorderBrush="#A0522D" BorderThickness="0,0,0,2" Margin="10,0,10,10">
                <TextBox Name="IdTextBox" Height="25"  Background="Transparent" Foreground="#A0522D"/>
            </Border>

            <Button Content="Eliminar" Width="120" Height="30" HorizontalAlignment="Center" Margin="10,10,10,0" Foreground="#DEB887" Background="#A0522D" BorderThickness="0" BorderBrush="Transparent" Padding="10,5" Click="Button_Click"  />
        </StackPanel>
    </Grid>
</Page>
